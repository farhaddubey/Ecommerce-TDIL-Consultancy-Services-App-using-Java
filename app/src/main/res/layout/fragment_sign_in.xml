<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignIn"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="center_horizontal"
        android:padding="20sp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tdilcs"
            android:textStyle="bold"
            android:textColor="#6FFBFBFB"
            android:textSize="15sp"
            android:paddingHorizontal="5sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company of Life Services"
            android:textColor="#6FFBFBFB"
            android:textStyle="bold"
            android:textSize="15sp"
            android:paddingHorizontal="5sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="20sp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150sp"
            android:layout_height="80sp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/tdilcs_blue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="TDIL Consultancy Services"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:paddingBottom="15sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textColorHint="@color/text_hint"
            android:background="@color/input_bg"
            android:layout_marginVertical="2sp"
            android:padding="15sp"
            android:id="@+id/signInEmail"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="@color/text_hint"
            android:background="@color/input_bg"
            android:layout_marginVertical="2sp"
            android:padding="15sp"
            android:id="@+id/signInPassword"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:enabled="false"
            android:layout_marginVertical="2sp"
            android:textColorHint="@color/white"
            android:background="@color/btn_color"
            android:padding="15sp"
            android:id="@+id/signInBtn"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/signInNotice"
            android:textColor="@color/design_default_color_error"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            android:paddingHorizontal="5sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="15sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgor your login details?"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:paddingHorizontal="5sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset Password !"
                android:textColor="#0681B8"
                android:textStyle="bold"
                android:textSize="12sp"
                android:paddingHorizontal="5sp"
                android:id="@+id/signInResetPassword"/>


        </LinearLayout>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:id="@+id/signInProgressBar"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="20sp"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="150sp"
            android:layout_height="80sp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/tdil_smallest" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingVertical="5sp"
            android:paddingHorizontal="15sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account?"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:paddingHorizontal="5sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign up."
                android:textColor="#0681B8"
                android:textStyle="bold"
                android:textSize="12sp"
                android:paddingHorizontal="5sp"
                android:id="@+id/signUp"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>